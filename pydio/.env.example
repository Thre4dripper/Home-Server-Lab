# Pydio Cells Configuration Example

# Frontend Admin Credentials
FRONTEND_LOGIN=<ADMIN_USERNAME>
FRONTEND_PASSWORD=<ADMIN_PASSWORD>

# Database Configuration
DB_CONNECTION_TYPE=tcp
DB_TCP_HOSTNAME=mysql
DB_TCP_PORT=3306
DB_TCP_NAME=<DATABASE_NAME>
DB_TCP_USER=<DATABASE_USER>
DB_TCP_PASSWORD=<DATABASE_PASSWORD>

# MySQL Configuration
MYSQL_ROOT_PASSWORD=<MYSQL_ROOT_PASSWORD>
MYSQL_DATABASE=<DATABASE_NAME>
MYSQL_USER=<DATABASE_USER>
MYSQL_PASSWORD=<DATABASE_PASSWORD>

# Network Configuration
PYDIO_HOST=<HOST_IP>
PYDIO_PORT=8080

# External Storage
EXTERNAL_STORAGE_PATH=<PATH_TO_EXTERNAL_STORAGE>

# Security - Change in production
CELLS_MINIO_ALLOW_CROSSMOUNT=true