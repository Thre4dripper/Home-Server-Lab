# Gitea Git Service Configuration Example
# Copy this file to .env and customize the values

# Network Configuration
GITEA_DOMAIN=192.168.0.108
GITEA_PORT=3000
GITEA_HTTP_PORT=3000
GITEA_SSH_PORT=222

# User Configuration
USER_UID=1000
USER_GID=1000

# Database Configuration (PostgreSQL)
POSTGRES_USER=gitea
POSTGRES_PASSWORD=change_this_secure_password
POSTGRES_DB=gitea

# Admin Configuration (will be created on first setup)
GITEA_ADMIN_USER=admin
GITEA_ADMIN_PASSWORD=change_this_password
GITEA_ADMIN_EMAIL=admin@localhost

# Application Configuration
GITEA_APP_NAME="Gitea Git Service"
GITEA_SECRET_KEY="generate_random_key_here"