# LocalStack Configuration Template
# Copy this file to .env and customize your installation

# Authentication (Required for Pro only)
LOCALSTACK_AUTH_TOKEN=your_auth_token_here

# LocalStack Configuration
LOCALSTACK_WEB_UI=1        # Enable Web UI / Cloud Dashboard (Pro only)
DEBUG=0                    # Enable debug logging (0=off, 1=on)
PERSISTENCE=1              # Enable data persistence (Pro only)

# AWS Credentials for LocalStack (these are safe test values)
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test
AWS_SESSION_TOKEN=test
AWS_DEFAULT_REGION=us-east-1
AWS_ENDPOINT_URL=http://localhost:4566

# Additional AWS Configuration for VS Code plugin compatibility
AWS_ACCOUNT_ID=000000000000
AWS_DEFAULT_OUTPUT=json

# Container Configuration
LOCALSTACK_DOCKER_NAME=localstack-main
LOCALSTACK_HOSTNAME=127.0.0.1
LOCALSTACK_PORT=4566

# Note: Community version works without auth token
# Pro version requires valid auth token from https://app.localstack.cloud