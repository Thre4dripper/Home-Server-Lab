# Nginx Proxy Manager Configuration
NPM_TAG=latest
POSTGRES_TAG=15-alpine
CONTAINER_NAME=nginx-proxy-manager
DB_CONTAINER_NAME=nginx-proxy-manager-db
RESTART_POLICY=unless-stopped

# Port Configuration
HTTP_PORT=80
HTTPS_PORT=443
ADMIN_PORT=81

# Database Configuration
# ⚠️ IMPORTANT: Change these credentials before first run!
DB_HOST=db
DB_PORT=5432
DB_USER=npm
DB_PASSWORD=npm_secure_password_change_me
DB_NAME=npm

# Resource Limits
MEMORY_LIMIT=512M
MEMORY_RESERVATION=128M
DB_MEMORY_LIMIT=256M
DB_MEMORY_RESERVATION=64M
