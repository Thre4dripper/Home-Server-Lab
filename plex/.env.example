# Plex Media Server Configuration
PLEX_TAG=latest
CONTAINER_NAME=plex
RESTART_POLICY=unless-stopped

# Plex Configuration
TIMEZONE=UTC
PLEX_CLAIM_TOKEN=
PLEX_UID=1000
PLEX_GID=1003

# Network Configuration
ADVERTISE_IP=http://localhost:32400/
ALLOWED_NETWORKS=192.168.0.0/24,172.16.0.0/16

# Media Path (adjust to your media location)
MEDIA_PATH=./media

# Advanced Configuration
CHANGE_CONFIG_DIR_OWNERSHIP=true

# Resource Limits
MEMORY_LIMIT=2G
MEMORY_RESERVATION=512M

# Hardware Transcoding (for Plex Pass users)
ENABLE_HARDWARE_TRANSCODING=false